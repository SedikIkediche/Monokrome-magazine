<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.ssquare.myapplication.monokrome.ui.main.list.ListFragment"
        android:label="Home"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.ssquare.myapplication.monokrome.ui.main.detail.DetailFragment"
        android:label="Home"
        tools:layout="@layout/fragment_detail" >
    </fragment>
    <fragment
        android:id="@+id/searchMagazineFragment"
        android:name="com.ssquare.myapplication.monokrome.ui.main.search.SearchMagazineFragment"
        android:label="Home"
        tools:layout="@layout/fragment_search_magazine" />
</navigation>